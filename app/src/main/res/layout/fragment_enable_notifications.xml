<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.michel.mynews.EnableNotificationsFragment">

    <TextView
        android:id="@+id/line_gray"
        android:background="@color/gray"
        android:layout_marginTop="@dimen/margin_top_enable"
        android:layout_marginLeft="@dimen/margin_left_enable"
        android:layout_marginRight="@dimen/margin_right_enable"
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_enable" />

    <LinearLayout
        android:layout_marginTop="@dimen/margin_top_enable"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_weight="1"
            android:text="@string/enable_notifications"
            android:layout_marginLeft="@dimen/margin_left_enable"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <Switch
            android:layout_marginRight="@dimen/margin_right_enable"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>

</LinearLayout>
